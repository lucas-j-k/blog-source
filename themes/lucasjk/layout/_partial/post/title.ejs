<% if (post.link){ %>
  <h2 class="post__header-title">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <div class="post__header-wrap">
      <h2 class="post__header-title">
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
      </h2>
      <p class="post__subtitle"><%- post.subtitle %></p>
    </div>
  <% } else { %>
    <h2 class="post__header-title">
      <%= post.title %>
    </h2>
    <p class="post__subtitle"><%- post.subtitle %></p>
  <% } %>
<% } %>
